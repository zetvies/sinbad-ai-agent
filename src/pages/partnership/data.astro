---
// Components
import Layout from "../../layouts/Layout.astro";
import AIAgent from "../../components/AIAgent.astro";
import AgentOptionScreen from "../../components/screen/AgentOption.astro";
import GetUmrahVisaScreen from "../../components/screen/GetUmrahVisa.astro";
import SelectLanguageModal from "../../components/modal/SelectLanguageModal.astro";
import EmploymentVerification from "../../components/form/EmploymentVerification.astro";
import PartnershipHubScreen from "../../components/screen/PartnershipHubScreen.astro";

// Icons
import WorldIcon from "../../assets/tabler-icons/world.astro";
import UserIcon from "../../assets/tabler-icons/user.astro";
import MailIcon from "../../assets/tabler-icons/mail.astro";
import PhoneIcon from "../../assets/tabler-icons/phone.astro";
import GenderIcon from "../../assets/tabler-icons/gender-male.astro";
import ChevronDown from "../../assets/tabler-icons/chevron-down.astro";
// Components
import SelectNationalityModal from "../../components/modal/SelectNationalityModal.astro";
import SelectGenderModal from "../../components/modal/SelectGenderModal.astro";
import Contract from "../../assets/tabler-icons/contract.astro";
---

<Layout title="AI Agent">
  <SelectLanguageModal />
  <AIAgent text="What brings you here today?" />
  <button
    id="selectLanguageButton"
    class="absolute top-6 right-6 flex items-center space-x-1 px-3 py-1 bg-white rounded-full border border-dark-green hover:bg-white-100"
  >
    <div class={`flag-gb w-7 h-fit flex items-center emoji text-[1.1em]`}></div>
    <div class="text-[.9em] uppercase font-medium">Eng</div>
  </button>
  <div class="h-[65svh] w-full flex-1 flex flex-col overflow-y-auto p-4">
    <div id="personalDetailsForm" class="h-full flex-1 flex flex-col">
      <div class="ibm-plex-mono-medium">Data Partner</div>
      <div class="ibm-plex-mono-regular text-sm mb-3">
        Please fill the fields to verify for partnership.
      </div>
      <div class="flex flex-col space-y-3">
        <div
          class="w-full h-14 text-left px-4 border rounded-lg text-[.9em] flex items-center space-x-2"
        >
          <UserIcon />
          <input
            type="text"
            id="name"
            class="formInput w-full h-full rounded-lg focus:outline-none"
            placeholder="Name"
          />
        </div><div
          class="w-full h-14 text-left px-4 border rounded-lg text-[.9em] flex items-center space-x-2"
        >
          <Contract />
          <input
            type="text"
            id="role"
            class="formInput w-full h-full rounded-lg focus:outline-none"
            placeholder="Role"
          />
        </div>
        <div
          class="w-full h-14 text-left px-4 border rounded-lg text-[.9em] flex items-center space-x-2"
        >
          <MailIcon />
          <input
            type="text"
            id="email"
            class="formInput w-full h-full rounded-lg focus:outline-none"
            placeholder="Email"
          />
        </div>
        <div
          class="w-full h-14 text-left px-4 border rounded-lg text-[.9em] flex items-center space-x-2"
        >
          <PhoneIcon />
          <input
            type="text"
            id="mobile_number"
            class="formInput w-full h-full rounded-lg focus:outline-none"
            placeholder="Mobile Number (Optional)"
          />
        </div>
      </div>
    </div>
  </div>

  <div
    class="absolute bottom-0 left-0 flex items-center w-full px-4 h-20 space-x-2 bg-white"
  >
    <a href="/partnership" class="flex-1">
      <button
        id="prevButton"
        class="w-full bg-grey rounded-full flex font-medium text-gray-400 justify-center items-center p-3"
      >
        Back
      </button>
    </a>

    <a href="/partnership" class="flex-1">
      <button
        id="nextButton"
        disabled={false}
        class={true
          ? `w-full  bg-dark-green rounded-full flex font-medium text-white border-2 border-white justify-center items-center p-3`
          : `w-full  bg-grey rounded-full flex font-medium text-gray-400 border-2 border-gray-300 justify-center items-center p-3`}
      >
        Submit
      </button>
    </a>
  </div>
</Layout>
