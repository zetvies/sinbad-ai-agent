---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/flags.min.css" />
  </head>
  <body>
    <main
      class="flex min-h-[100svh] max-h-[100svh] min-w-screen flex-col items-center bg-[#b0b0a0]"
    >
      <div
        class="flex min-h-[100svh] max-h-[100svh] bg-white items-center flex-col w-[100%] max-w-[80svh] relative"
        style={{ boxShadow: "0px 0px 20px 3px rgba(0, 0, 0, 0.20)" }}
      >
        <slot />
      </div>
    </main>
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Noto+Color+Emoji&display=swap");

  body {
    box-sizing: content-box;
    font-size: 1.1rem;
    font-optical-sizing: auto;
    font-style: normal;
    font-variation-settings: "slnt" 0;
  }

  .emoji {
    font-family: "Noto Color Emoji", sans-serif;
    font-weight: 400;
    font-style: normal;
  }

  .ibm-plex-mono-thin {
    font-family: Menlo, monospace;
    font-weight: 100;
    font-style: normal;
  }

  .ibm-plex-mono-thin-italic {
    font-family: Menlo, monospace;
    font-weight: 100;
    font-style: italic;
  }

  .ibm-plex-mono-extralight {
    font-family: Menlo, monospace;
    font-weight: 200;
    font-style: normal;
  }

  .ibm-plex-mono-extralight-italic {
    font-family: Menlo, monospace;
    font-weight: 200;
    font-style: italic;
  }

  .ibm-plex-mono-light {
    font-family: Menlo, monospace;
    font-weight: 300;
    font-style: normal;
  }

  .ibm-plex-mono-light-italic {
    font-family: Menlo, monospace;
    font-weight: 300;
    font-style: italic;
  }

  .ibm-plex-mono-regular {
    font-family: Menlo, monospace;
    font-weight: 400;
    font-style: normal;
  }

  .ibm-plex-mono-regular-italic {
    font-family: Menlo, monospace;
    font-weight: 400;
    font-style: italic;
  }

  .ibm-plex-mono-medium {
    font-family: Menlo, monospace;
    font-weight: 600;
    font-style: normal;
  }

  .ibm-plex-mono-medium-italic {
    font-family: Menlo, monospace;
    font-weight: 500;
    font-style: italic;
  }

  .ibm-plex-mono-semibold {
    font-family: Menlo, monospace;
    font-weight: 600;
    font-style: normal;
  }

  .ibm-plex-mono-semibold-italic {
    font-family: Menlo, monospace;
    font-weight: 600;
    font-style: italic;
  }

  .ibm-plex-mono-bold {
    font-family: Menlo, monospace;
    font-weight: 700;
    font-style: normal;
  }

  .ibm-plex-mono-bold-italic {
    font-family: Menlo, monospace;
    font-weight: 700;
    font-style: italic;
  }
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Menlo,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Menlo,
      monospace;
  }
</style>
